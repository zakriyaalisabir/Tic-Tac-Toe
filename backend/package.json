{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for TicTacToe game",
  "main": "server.js",
  "scripts": {
    "analyse": "npm run lint && npm run test",
    "build": "cd ../frontend && npm run build && cp -r ./build/ ../backend/",
    "db:migrate": "sequelize db:migrate",
    "db:undo": "sequelize db:migrate:undo",
    "db:undo:all": "sequelize db:migrate:undo:all",
    "debug": "DEBUG=src:* && npm start",
    "init": "cp ../.env.sample .env",
    "lint:fix": "./node_modules/.bin/eslint . --fix",
    "lint": "./node_modules/.bin/eslint .",
    "pretest": "npm run lint",
    "prestart": "npm run init && npm run build",
    "reset": "npm run db:undo",
    "reset:hard": "npm run db:undo:all",
    "setup": "npm run dotenv:init && npm run db:migrate",
    "start": "nodemon server",
    "test": "jest --verbose  --coverage",
    "test:watch": "jest --verbose  --coverage --watch"
  },
  "author": "zakriyaalisabir",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "pg": "^8.0.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.6"
  },
  "devDependencies": {
    "debug": "^4.1.1",
    "jest": "^25.3.0",
    "eslint": "^6.8.0"
  },
  "repository": "https://github.com/zakriyaalisabir/tictactoe",
  "engines": {
    "node": "^13.0.0"
  }
}
